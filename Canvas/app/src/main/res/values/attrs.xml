<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="VerticalView">
        <attr name="pointer" format="reference"/>
        <attr name="bg_top" format="reference"/>
    </declare-styleable>

    <declare-styleable name="UpAndDownView">
        <attr name="bg" format="reference"/>
        <attr name="image_scale_type">
            <enum name="fillXY" value="0"/>
            <enum name="center" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="LeftAndRightView">
        <attr name="light" format="reference"/>
        <attr name="pole" format="reference"/>
    </declare-styleable>
    
    <declare-styleable name="HorizontalView">
        <attr name="instrument" format="reference"/>
        <attr name="h_pointer" format="reference"/>
    </declare-styleable>

    <declare-styleable name="UponRotateImageView">
        <attr name="angle" format="integer"/>
    </declare-styleable>
</resources>
